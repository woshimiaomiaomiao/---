<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunxiao.mapper.LeaveApplicationMapper">

    <!-- 插入请假申请 -->
    <insert id="insertLeaveApplication" parameterType="com.yunxiao.entity.LeaveApplication">
        INSERT INTO LeaveApplications (studentId, reason, startDate, endDate, status)
        VALUES (#{studentId}, #{reason}, #{startDate}, #{endDate}, #{status})
    </insert>

    <!-- 根据ID查询请假申请 -->
    <select id="selectLeaveApplicationById" parameterType="Long" resultType="com.yunxiao.entity.LeaveApplication">
        SELECT * FROM LeaveApplications WHERE applicationId = #{id}
    </select>

    <!-- 更新请假申请 -->
    <update id="updateLeaveApplication" parameterType="com.yunxiao.entity.LeaveApplication">
        UPDATE LeaveApplications SET studentId = #{studentId}, reason = #{reason}, startDate = #{startDate}, endDate = #{endDate}, status = #{status}
        WHERE applicationId = #{applicationId}
    </update>

    <!-- 根据ID删除请假申请 -->
    <delete id="deleteLeaveApplication" parameterType="Long">
        DELETE FROM LeaveApplications WHERE applicationId = #{id}
    </delete>

</mapper>
